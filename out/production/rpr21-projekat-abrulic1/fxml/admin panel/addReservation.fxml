<?import javafx.scene.text.*?>

<BorderPane prefHeight="313.0" prefWidth="315.0" styleClass="body" stylesheets="@../../css/reservation.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.projekat.AddReservationController">
    <stylesheets>
        <URL value="@/css/reservation.css" />
    </stylesheets>
    <center>
      <GridPane prefHeight="448.0" prefWidth="338.0" styleClass="body" stylesheets="@../../css/reservation.css" BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <GridPane prefHeight="358.0" prefWidth="314.0" styleClass="body" stylesheets="@../../css/reservation.css">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label alignment="CENTER" contentDisplay="BOTTOM" prefHeight="45.0" prefWidth="301.0" text="%reserve_a_table" textFill="#ffeeee" GridPane.columnSpan="2">
                     <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </GridPane.margin>
                     <font>
                        <Font name="System Bold Italic" size="18.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="datePickerId" prefHeight="26.0" prefWidth="168.0" promptText="%choose_a_date" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </GridPane.margin>
                  </DatePicker>
                  <GridPane GridPane.columnSpan="2" GridPane.rowIndex="2">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Button fx:id="minusBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#minusBtnAction" prefHeight="26.0" prefWidth="27.0" styleClass="buttons" stylesheets="@../../css/reservation.css" text="-" GridPane.columnIndex="1">
                           <GridPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </GridPane.margin>
                        </Button>
                        <Button fx:id="plusBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="34.0" mnemonicParsing="false" onAction="#plusBtnAction" styleClass="buttons" stylesheets="@../../css/reservation.css" text="+" GridPane.columnIndex="3">
                           <GridPane.margin>
                              <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                           </GridPane.margin>
                        </Button>
                        <Label fx:id="numberOfGuestsLabel" alignment="CENTER" prefHeight="18.0" prefWidth="130.0" text="2 Guests" textFill="#fcf1f1" GridPane.columnIndex="2" />
                     </children>
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                  </GridPane>
                  <Label fx:id="descReservationLabel" alignment="CENTER" prefHeight="18.0" prefWidth="403.0" text="date and time of reservation" GridPane.columnSpan="2" GridPane.rowIndex="3">
                     <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </GridPane.margin>
                  </Label>
                  <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="4">
                    <buttons>
                      <Button fx:id="cancelBtn" cancelButton="true" mnemonicParsing="false" onAction="#cancelBtnAction" text="Cancel" />
                        <Button fx:id="okBtn" defaultButton="true" mnemonicParsing="false" onAction="#okBtnAction" text="OK" />
                    </buttons>
                     <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </GridPane.margin>
                  </ButtonBar>
                  <ChoiceBox fx:id="timeChoiceBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </GridPane.margin></ChoiceBox>
               </children>
            </GridPane>
         </children>
      </GridPane>
   </center>
</BorderPane>
