<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="223.0" prefWidth="306.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" />
    <ColumnConstraints hgrow="SOMETIMES" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints vgrow="SOMETIMES" />
    <RowConstraints vgrow="SOMETIMES" />
    <RowConstraints vgrow="SOMETIMES" />
  </rowConstraints>
  <children>
    <DatePicker fx:id="datePicker" prefHeight="26.0" prefWidth="168.0" promptText="%choose_a_date">
      <GridPane.margin>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </GridPane.margin>
    </DatePicker>
    <GridPane GridPane.columnSpan="2" GridPane.rowIndex="1">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>
      <children>
        <Button fx:id="btnMinus" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#minusBtnAction" prefHeight="26.0" prefWidth="27.0" text="-" GridPane.columnIndex="1">
          <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </GridPane.margin>
        </Button>
        <Button fx:id="btnPlus" alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="34.0" mnemonicParsing="false" onAction="#plusBtnAction" text="+" GridPane.columnIndex="3">
          <GridPane.margin>
            <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
          </GridPane.margin>
        </Button>
        <Label fx:id="numberOfGuestsLbl" alignment="CENTER" prefHeight="18.0" prefWidth="130.0" text="2 Guests" GridPane.columnIndex="2" />
      </children>
      <GridPane.margin>
        <Insets />
      </GridPane.margin>
    </GridPane>
    <ButtonBar prefHeight="40.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
      <buttons>
        <Button fx:id="CancelBtn" cancelButton="true" mnemonicParsing="false" onAction="#cancelBtnAction" text="Cancel" />
        <Button fx:id="okBtn" defaultButton="true" mnemonicParsing="false" onAction="#okBtnAction" text="OK" />
      </buttons>
      <GridPane.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </GridPane.margin>
    </ButtonBar>
    <ChoiceBox fx:id="choiceTime" prefWidth="150.0" GridPane.columnIndex="1">
      <GridPane.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </GridPane.margin></ChoiceBox>
  </children>
</GridPane>
